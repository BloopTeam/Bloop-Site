# Bloop Backend Configuration
# Copy this file to .env and fill in your API keys

# Server Configuration
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_PER_MINUTE=100

# Security
JWT_SECRET=change-me-in-production-use-strong-random-secret

# Database (Optional - for future phases)
# DATABASE_URL=postgresql://user:password@localhost:5432/bloop
# REDIS_URL=redis://localhost:6379

# ============================================
# AI Provider API Keys
# Add at least one provider to get started
# ============================================

# OpenAI (GPT-4, GPT-3.5)
OPENAI_API_KEY=sk-...

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...

# Google (Gemini)
GOOGLE_GEMINI_API_KEY=...

# Moonshot AI (Kimi K2.5) ⭐ Recommended
MOONSHOT_API_KEY=...

# DeepSeek (Code-focused) ⭐ Recommended for coding
DEEPSEEK_API_KEY=...

# Mistral AI (Creativity + Code)
MISTRAL_API_KEY=...

# xAI (Grok - Creative)
XAI_API_KEY=...

# Cohere (Enterprise)
COHERE_API_KEY=...

# Perplexity (Search-enhanced)
PERPLEXITY_API_KEY=...

# Together AI (Open-source models)
TOGETHER_API_KEY=...

# Anyscale (High-performance inference)
ANYSCALE_API_KEY=...

# Qwen (Alibaba - Multilingual)
QWEN_API_KEY=...

# ZeroOne (01.ai - Excellent reasoning)
ZEROONE_API_KEY=...

# Baidu (Ernie - Chinese-focused)
BAIDU_API_KEY=...

# ============================================
# OpenClaw Integration (Agent Orchestration)
# ============================================
OPENCLAW_ENABLED=true
OPENCLAW_GATEWAY_URL=ws://127.0.0.1:18789
OPENCLAW_AUTO_CONNECT=false
OPENCLAW_DEFAULT_THINKING_LEVEL=medium
OPENCLAW_SKILLS_ENABLED=true
OPENCLAW_BROWSER_ENABLED=false
OPENCLAW_CANVAS_ENABLED=false

# ============================================
# Moltbook Integration (AI Agent Social Network)
# ============================================
MOLTBOOK_ENABLED=true
MOLTBOOK_AGENT_PUBLIC=false
MOLTBOOK_AUTO_SHARE=false
MOLTBOOK_SKILL_SHARING_ENABLED=true

