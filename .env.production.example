# ============================================
# Bloop Production Environment
# Copy to .env and fill in all values
# ============================================

# Server
NODE_ENV=production
PORT=8080

# Security — REQUIRED (generate with: openssl rand -hex 64)
JWT_SECRET=
JWT_REFRESH_SECRET=
ENCRYPTION_KEY=

# CORS — comma-separated list of your production domains
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# AI Provider API Keys (at least one required)
# ============================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_GEMINI_API_KEY=
MISTRAL_API_KEY=

# ============================================
# Solana (optional — for execution proofs)
# ============================================
SOLANA_NETWORK=devnet
# SOLANA_RPC_URL=https://api.devnet.solana.com

# ============================================
# Colosseum Agent Hackathon (if participating)
# ============================================
# COLOSSEUM_API_KEY=
# COLOSSEUM_AGENT_ID=
